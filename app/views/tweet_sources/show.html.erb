<h1><%= @tweet_source.name %>'s Tweets!</h1>
<p><%= @tweet_source.bio %> </p>

<table>
  <thead>
    <tr>
      <th>
        Added
      </th>
      <th>
        Tweet
      </th>
    </tr>
  <thead>

  <tbody>
  <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.created_at.to_formatted_s(:short) %></td>
      <td><%= tweet.text %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'All channels', tweet_sources_path %>

